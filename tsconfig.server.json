{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "rootDir": ".",
    "outDir": "dist",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": false,
    "moduleResolution": "node",
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["./shared/*"]
    }
  },
  "include": [
    "server/index.ts",
    "server/routes.ts",
    "server/static.ts",
    "server/replit_integrations/auth/**/*.ts",
    "server/replit_integrations/object_storage/**/*.ts",
    "shared/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "vite.config.ts",
    "server/vite.ts",
    "**/*.test.ts"
  ]
}
