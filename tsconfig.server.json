{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "rootDir": ".",
    "outDir": "dist",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": false,
    "moduleResolution": "node",
    "types": ["node"]
  },
  "include": [
    "server/index.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "vite.config.ts",
    "server/vite.ts",
    "server/storage.ts",
    "shared/**/*",
    "**/*.test.ts"
  ]
}
